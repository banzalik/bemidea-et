<?xml version="1.0" encoding="UTF-8"?>
<toolSet name="BEM">
  <tool name="Create elem" description="Создание элемента блока" showInMainMenu="false" showInEditor="true" showInProject="true" showInSearchPopup="false" disabled="false" useConsole="false" synchronizeAfterRun="true">
    <exec>
      <option name="COMMAND" value="/usr/local/bin/node" />
